{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build active C++ file",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run (integrated terminal)",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "dependsOn": "Build active C++ file",
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": []
    }
  ]
}
